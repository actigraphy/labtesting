<!DOCTYPE html>
<html>
<head>
  <title>Actigraphy Data Visualization</title>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">
    google.charts.load('current', {'packages':['corechart']});

    google.charts.setOnLoadCallback(initializeCharts);

    function initializeCharts() {
      drawChart('day1Input', 'day1Chart', 'Activity Data Day 1');
      drawChart('day2Input', 'day2Chart', 'Activity Data Day 2');
      drawChart('day3Input', 'day3Chart', 'Activity Data Day 3');
      drawChart('day4Input', 'day4Chart', 'Activity Data Day 4');
      drawChart('day5Input', 'day5Chart', 'Activity Data Day 5');
      drawChart('day6Input', 'day6Chart', 'Activity Data Day 6');
      drawChart('day7Input', 'day7Chart', 'Activity Data Day 7');
    }

    function drawChart(dataInputId, chartDivId, chartTitle) {
      const rawData = document.getElementById(dataInputId).value;
      const dataArray = rawData.split('\n').map(Number);

      const data = new google.visualization.DataTable();
      data.addColumn('number', 'Minute');
      data.addColumn('number', 'Activity');

      for (let i = 0; i < dataArray.length; i++) {
        data.addRow([i, dataArray[i]]);
      }

      const options = {
        title: chartTitle,
        hAxis: {title: 'Minute of the Day'},
        vAxis: {title: 'Activity Count'},
        legend: 'none'
      };

      const chart = new google.visualization.LineChart(document.getElementById(chartDivId));
      chart.draw(data, options);
    }
  </script>
</head>
<body>
  <div>
    <h1>Actigraphy Data Visualization Day 1 </h1>
    <textarea id="day1Input" rows="25" cols="80"></textarea>
    <br>
    <button onclick="drawChart('day1Input', 'day1Chart', 'Activity Data Day 1')">Visualize</button>
    <div id="day1Chart" style="width: 900px; height: 500px;"></div>
  </div>

